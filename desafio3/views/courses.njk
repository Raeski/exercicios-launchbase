<!DOCTYPE html>
<html>
    <head>
        <title>Desafio 2-1</title>
        <link rel="stylesheet" href="styles.css">
        <link rel="icon" href="favicon.ico.png" type="image/x-icon" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
        rel="stylesheet">
    </head>
    <body>
        <header>
            <span class="material-icons">
                 arrow_back
                </span>
            <div class="title">
              <h1>Cursos RocketSeat</h1>
            </div>
        </header>

{%block content %}
{%endblock%}
        <section>
            <div class="container">
                {% for item in items %}
                <div class="courses" id="{{item.id}}">
                    <img src="{{item.img}}" alt="Imagem de {{item.description}}">
                    <p>{{item.description}}</p>
                        <h2>{{item.price}}</h2>
                    <a href="https://rocketseat.com.br/{{item.id}}" target="_blank"><p>{{item.acess}}</p></a>              
                </div>
                {% endfor %}
            </div>
        </section>
        <div class="modal-overlay">
            <div class="modal">
                <a href="" class="close-modal">
                    <i class="material-icons">close</i>
                </a>
                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>

        <script src="scripts.js"></script>
    </body>
</html>